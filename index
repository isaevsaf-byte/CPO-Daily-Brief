      {supplier:"Infineon", area:"NC", category:"EE Component", latest_signal:"Auto demand steady", risk_type:"Commercial", impact:1, urgency:"L", owner:"Owner TBD", next_step:"Monitor", link:"https://example.com/infineon", rag:"Green", updated_utc:"2025-11-10T08:30:00Z"},
      {supplier:"Weener (MO)", area:"NC", category:"Mechanical", latest_signal:"No material updates", risk_type:null, impact:null, urgency:null, owner:"Owner TBD", next_step:"Monitor", link:null, rag:"Green", updated_utc:"2025-11-10T08:30:00Z"},
      {supplier:"Rosti (MO)", area:"NC", category:"Mechanical", latest_signal:"No material updates", risk_type:null, impact:null, urgency:null, owner:"Owner TBD", next_step:"Monitor", link:null, rag:"Green", updated_utc:"2025-11-10T08:30:00Z"},
      {supplier:"Jabil (MO)", area:"NC", category:"Mechanical", latest_signal:"EMS capacity resilient", risk_type:"Operational", impact:1, urgency:"L", owner:"Owner TBD", next_step:"Monitor", link:"https://example.com/jabil", rag:"Green", updated_utc:"2025-11-10T08:30:00Z"}
    ];

    // ---- Renderers ----
    const el = s => document.querySelector(s);
    const today = new Date();
    el('#today').textContent = today.toLocaleString(undefined, { weekday: 'short', day: '2-digit', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit' });

    // Top Signals
    function renderSignals(){
      const tb = el('#signalsTable tbody');
      tb.innerHTML = '';
      for(const r of topSignals){
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${r.entity}</td>
          <td>${r.event}</td>
          <td>${r.impact}</td>
          <td>${r.urgency}</td>
          <td>${r.confidence}%</td>
          <td><span class="pill ${pillClass(r.risk_type)}">${r.risk_type}</span></td>
          <td>${r.link? `<a href="${r.link}" target="_blank">Open</a>`:''}</td>`;
        tb.appendChild(tr);
      }
      el('#kpiSignals').textContent = topSignals.length;
    }

    function pillClass(rt){
      if(!rt) return '';
      rt = rt.toLowerCase();
      if(rt.includes('oper')) return 'op';
      if(rt.includes('fin')) return 'fin';
      if(rt.includes('leg')) return 'leg';
      if(rt.includes('geo')) return 'geo';
      if(rt.includes('esg')) return 'esg';
      if(rt.includes('cyb')) return 'cyb';
      return '';
    }

    // Macro
    function renderMacro(){
      const grid = el('#macroGrid');
      grid.innerHTML = '';
      for(const m of macro){
        const card = document.createElement('div');
        card.className = 'card';
        card.innerHTML = `<div class="body">
          <h3>${m.region}</h3>
          <ul class="bullets">${m.bullets.map(b=>`<li>${b}</li>`).join('')}</ul>
          <div style="margin-top:10px"><a href="${m.link}" target="_blank">Primary source</a></div>
        </div>`;
        grid.appendChild(card);
      }
    }

    // Peers
    function renderPeers(){
      const grid = el('#peersGrid');
      grid.innerHTML = '';
      for(const p of peers){
        const card = document.createElement('div');
        card.className = 'card';
        card.innerHTML = `<div class="body">
          <h3>${p.company}</h3>
          <ul class="bullets">${p.bullets.map(b=>`<li>${b}</li>`).join('')}</ul>
          <div style="margin-top:10px"><a href="${p.link}" target="_blank">Company site</a></div>
        </div>`;
        grid.appendChild(card);
      }
    }

    // Watchlist table with search & filters
    let sortKey = 'supplier';
    let sortAsc = true;

    function renderWatchlist(){
      const q = el('#search').value.toLowerCase();
      const rag = el('#ragFilter').value;
      const area = el('#areaFilter').value;
      const tb = el('#watchTable tbody');
      tb.innerHTML = '';
      let rows = watchlist.filter(r => {
        const hit = `${r.supplier} ${r.category} ${r.latest_signal} ${r.risk_type||''}`.toLowerCase().includes(q);
        const ragOk = !rag || r.rag === rag;
        const areaOk = !area || r.area === area;
        return hit && ragOk && areaOk;
      });
      rows.sort((a,b)=>{
        const va = (a[sortKey]||'').toString().toLowerCase();
        const vb = (b[sortKey]||'').toString().toLowerCase();
        if(va<vb) return sortAsc? -1: 1;
        if(va>vb) return sortAsc? 1: -1;
        return 0;
      })
      for(const r of rows){
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${r.supplier}</td>
          <td>${r.area}</td>
          <td>${r.category}</td>
          <td>${r.latest_signal}</td>
          <td>${r.risk_type? `<span class="pill ${pillClass(r.risk_type)}">${r.risk_type}</span>`:''}</td>
          <td>${r.impact??''}</td>
          <td>${r.urgency??''}</td>
          <td>${r.owner??''}</td>
          <td>${r.next_step??''}</td>
          <td>${r.link? `<a href="${r.link}" target="_blank">Open</a>`:''}</td>
          <td><span class="rag ${ragShort(r.rag)}"><span class="dot"></span> ${r.rag}</span></td>
          <td>${r.updated_utc}</td>`;
        tb.appendChild(tr);
      }
      el('#kpiSuppliers').textContent = watchlist.length;
    }

    function ragShort(s){ return s==="Green"? 'G': s==="Amber"? 'A':'R'; }

    // Sorting
    document.querySelectorAll('#watchTable thead th[data-sort]').forEach(th=>{
      th.addEventListener('click', ()=>{
        const key = th.getAttribute('data-sort');
        if(sortKey===key) sortAsc = !sortAsc; else { sortKey = key; sortAsc = true; }
        renderWatchlist();
      })
    });

    // Search & filters
    ['search','ragFilter','areaFilter'].forEach(id=> el('#'+id).addEventListener('input', renderWatchlist));

    // Export CSV
    function toCsv(arr){
      const cols = ["supplier","area","category","latest_signal","risk_type","impact","urgency","owner","next_step","link","rag","updated_utc"];
      const header = cols.join(',');
      const lines = arr.map(r=> cols.map(k=>{
        const v = r[k]===null||r[k]===undefined? '' : String(r[k]).replaceAll('"','""');
        return '"'+v+'"';
      }).join(','));
      return [header, ...lines].join('\n');
    }
    el('#exportCsv').addEventListener('click', ()=>{
      const blob = new Blob([toCsv(watchlist)], {type:'text/csv'});
      const a = document.createElement('a');
      a.href = URL.createObjectURL(blob);
      a.download = 'watchlist.csv';
      a.click();
    });

    // Theme toggle
    el('#toggleTheme').addEventListener('click', ()=>{
      document.body.classList.toggle('light');
      localStorage.setItem('theme', document.body.classList.contains('light')? 'light':'dark');
    });
    (function(){ const t = localStorage.getItem('theme'); if(t==='dark') document.body.classList.remove('light'); })();

    // Copy one-liner
    el('#copyOne').addEventListener('click', ()=>{
      const txt = el('#oneLiner').textContent.trim();
      navigator.clipboard.writeText(txt).then(()=>{
        const old = el('#copyOne').textContent; el('#copyOne').textContent = 'Copied'; setTimeout(()=>el('#copyOne').textContent=old, 1200);
      });
    });

    // Render all
    renderSignals();
    renderMacro();
    renderPeers();
    renderWatchlist();
  </script>
</body>
